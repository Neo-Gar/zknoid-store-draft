{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      },
    ],
    "paths": {
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/public/*": ["./public/*"],
      "@/games/*": ["./games/*"],
      "@/constants/*": ["./constants/*"],

    }

  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
